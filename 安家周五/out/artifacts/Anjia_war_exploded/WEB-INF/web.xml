<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>webServlet.LoginServlet</servlet-name>
        <servlet-class>webServlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>webServlet.LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>webServlet.RegistServlet</servlet-name>
        <servlet-class>webServlet.RegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>webServlet.RegistServlet</servlet-name>
        <url-pattern>/registServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>webServlet.AdminLoginServlet</servlet-name>
        <servlet-class>webServlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>webServlet.AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>webServlet.AdminRegistServlet</servlet-name>
        <servlet-class>webServlet.AdminRegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>webServlet.AdminRegistServlet</servlet-name>
        <url-pattern>/AdminRegistServlet</url-pattern>
    </servlet-mapping>
</web-app>